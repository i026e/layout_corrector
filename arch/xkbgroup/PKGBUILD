pkgbase=('python-xkbgroup')
pkgname=('python-xkbgroup')
_module='xkbgroup'
pkgver='0.1.4.1'
pkgrel=1
pkgdesc="Query and change XKB layout state"
url="https://github.com/hcpl/xkbgroup"
depends=('python')
makedepends=('python-pip')
license=('MIT')
arch=('any')
source=()
md5sums=()


package() {
    depends+=()
    cd "${srcdir}/${_module}-${pkgver}"
    PIP_CONFIG_FILE=/dev/null pip install --isolated --root="$pkgdir" --ignore-installed --no-deps xkbgroup
}
